{
  "version": 2,
  "builds": [
    {
      "src": "mop-website/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/mop-website/index.html"
    },
    {
      "src": "/styles.css",
      "dest": "/mop-website/styles.css",
      "headers": {
        "Content-Type": "text/css"
      }
    },
    {
      "src": "/script.js",
      "dest": "/mop-website/script.js",
      "headers": {
        "Content-Type": "application/javascript"
      }
    },
    {
      "src": "/mop-image.png",
      "dest": "/mop-website/mop-image.png",
      "headers": {
        "Content-Type": "image/png"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/mop-website/$1"
    }
  ]
}

